{
    "name": "hiraeth/core",
    "description": "Core classes for the Hiraeth Nano-Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "msahagian@dotink.org",
            "role":  "Lead Architect / Developer"
        }
    ],
    "require": {
	"hiraeth/app": "^3.0",
        "psr/log": "^1.1",
        "psr/container": "^2.0",
        "dotink/jin": "^4.0",
        "dotink/slashtrace": "^2.0",
        "rdlowrey/auryn": "^1.4",
        "defuse/php-encryption": "^2.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
	"phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "classmap": ["src/"]
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
