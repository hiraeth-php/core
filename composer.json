{
    "name": "hiraeth/core",
    "description": "Core classes for the Hiraeth Nano-Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "msahagian@dotink.org",
            "role":  "Lead Architect / Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "hiraeth/app": "^3.0",
        "psr/log": "^3.0",
        "psr/container": "^2.0",
        "dotink/jin": "^5.0",
        "dotink/slashtrace": "^2.0",
        "dotink/auryn": "dev-master",
        "defuse/php-encryption": "^2.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "classmap": [
            "src"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "test/src"
        ]
    },
    "type": "opus-package",
    "extra": {
	"branch-alias": {
		"dev-master": "3.0-dev"
	},
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
